  "automation_rules": {
    "tag_cleanup": {
      "description": "Rules for removing outdated tags",
      "rules": [
        {
          "remove": "engagement:cold",
          "when": "engagement_score > 20"
        },
        {
          "remove": "engagement:warm",
          "when": "engagement_score < 20 OR engagement_score > 60"
        },
        {
          "remove": "engagement:hot",
          "when": "engagement_score < 60"
        },
        {
          "remove": "pitch:generated",
          "when": "pitch_status != 'generated'"
        },
        {
          "remove": "pitch:queued",
          "when": "pitch_status != 'queued'"
        }
      ]
    },
    "tag_progression": {
      "description": "Tags that should be updated as status progresses",
      "progressions": [
        {
          "from": "pitch:sent",
          "to": "pitch:opened",
          "trigger": "email_open_event"
        },
        {
          "from": "pitch:opened",
          "to": "pitch:clicked",
          "trigger": "email_click_event"
        },
        {
          "from": "pitch:clicked",
          "to": "pitch:replied",
          "trigger": "email_reply_detected"
        },
        {
          "from": "pitch:replied",
          "to": "pitch:converted",
          "trigger": "meeting_booked"
        }
      ]
    }
  },
  "implementation_notes": {
    "api_endpoint": "/api/tags/new",
    "bulk_application": "/api/contacts/{id}/tags/add",
    "automation_via": "Campaigns > Decisions > Contact Tag",
    "tag_limit": "No hard limit, but keep organized",
    "best_practices": [
      "Use consistent naming convention (category:value)",
      "Apply colors for visual differentiation",
      "Document auto-apply logic",
      "Regular cleanup of unused tags",
      "Use segments for complex queries, tags for simple categorization"
    ]
  }
